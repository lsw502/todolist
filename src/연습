// import React from 'react';
// // import './App.css';
// import { useState } from "react"


function App() {
  //ì œëª©
  const [title, setTitle] = useState("");
  //ë‚´ìš©
  const [content, setContent] = useState("");
  //íˆ¬ë‘ë¦¬ìŠ¤íŠ¸
  const [todo, setTodo] = useState([]);
  const [doneTodo, setDoneTodo] = useState([]);
  //ì¶”ê°€í•˜ê¸°,íˆ¬ë‘ë¦¬ìŠ¤íŠ¸
  const clickAddButtonHandler = () => {
    const newTodo = {
      id: Date.now(),
      title: title,
      content: content,
      isDone: false,
    }
    setTodo([...todo, newTodo]);
  }
  const titleChangeHandler = (e => {
    setTitle(e.target.value)
  });
  const contentChangeHandler = (e => {
    setContent(e.target.value)
  })
  //ì‚­ì œí•˜ê¸°
  const clickRemoveButtonHandler = (id) => {
    setTodo(todo.filter(item => item.id !== id))
  };
  //ì €ì¥í•˜ê¸°

  const handlerDone = (Did) => {
    const newDone = {
      id: Did.id,
      title: Did.title,
      content: Did.content,
      isDone: true,
    }
    setDoneTodo([...doneTodo, newDone])
    setTodo(todo.filter(item => item.id !== Did.id))

  };

  const todoHandler=(item) => {
    if(item.isDone === true){
        return (
          <div className="card">
            <h2>{item.title}</h2>
            <p>{item.content}</p>
            <button onClick={() => clickRemoveButtonHandler(item.id)} className="box1_delete">ì‚­ì œí•˜ê¸°</button>
            <button onClick={() => handlerDone(item.Did)} className="box1_complete">ìˆ˜ì •</button>
          </div>
        )
    }else{
        return (
          <div className="card">
            <h2>{item.title}</h2>
            <p>{item.content}</p>
            <button onClick={() => clickRemoveButtonHandler(item.id)} className="box1_delete">ì‚­ì œí•˜ê¸°</button>
            <button onClick={() => handlerDone(item.Did)} className="box1_complete">ì €ì¥</button>
          </div>
        )
      }
    };
    

    const workingCardList = done.map(ite => {
      todoHandler(item)
    })

    const doneCardList = doneTodo.map(item => {
      todoHandler(item)
    })
  




  return (

    <div className="main">
      {/* í—¤ë” */}
      <div className="title">
        <h2>My ToDo List</h2>
        <h3>React</h3>
      </div>
      {/* ì œëª© ì…ë ¥ */}
      <div className="titleInput">
        <p>ì œëª©</p>
        <input
          type="text"
          value={title}
          onChange={titleChangeHandler}
        />
        {/* ë‚´ìš© ì…ë ¥ */}
        <p>ë‚´ìš©</p>
        <input
          type="text"
          value={content}
          onChange={contentChangeHandler}
        />
        {/* ì¶”ê°€í•˜ê¸° ë²„íŠ¼ */}
        <button onClick={clickAddButtonHandler}>ì¶”ê°€í•˜ê¸°</button>
      </div>

      <div className="working">
        <h2>Working..ğŸ”¥</h2>
      </div>
      {/* íˆ¬ë‘ë¦¬ìŠ¤íŠ¸ ì¹´ë“œ ë“±ë¡ */}
      <div className="box1">
        {todo.map(item => {
         todoHandler()
        })}
      </div>

      <div className="done">
        <h2>Done..!ğŸ‰</h2>
      </div>
      {/* íˆ¬ë‘ë¦¬ìŠ¤íŠ¸ ì¹´ë“œ ìˆ˜ì • */}
      <div className="box2">
      {doneTodo.map(item => {
        todoHandler()
      })}
      </div>

    </div>

  );
}

export default App;
